{
  "name": "transcendence",
  "private": true,
  "packageManager": "pnpm@10.22.0",
  "pnpm": {
    "overrides": {
      "ajv@<6.14.0": "6.14.0",
      "minimatch@<3.1.3": "3.1.3",
      "minimatch@>=5.0.0 <5.1.7": "5.1.7",
      "minimatch@>=9.0.0 <9.0.6": "9.0.6"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  },
  "scripts": {
    "api:spec": "bash scripts/openapi/export.sh",
    "api:client": "pnpm --filter @transcendence/api-client gen && pnpm --filter @transcendence/api-client build",
    "api:gen": "pnpm api:spec && pnpm api:client",
    "api:check": "pnpm api:gen && git diff --exit-code -- openapi packages/api-client/src/schema.ts",
    "web:dev": "pnpm --filter @transcendence/api-client build && pnpm exec next dev apps/web -p 3000",
    "web:build": "pnpm --filter @transcendence/api-client build && pnpm --filter web build",
    "web:lint": "pnpm --filter @transcendence/api-client build && pnpm --filter web lint",
    "web:test": "pnpm --filter @transcendence/api-client build && pnpm --filter web test"
  }
}
