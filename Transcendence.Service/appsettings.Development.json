{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Hangfire": "Warning"
    }
  },
  "ConnectionStrings": {
    "MainDatabase": "Server=.;Database=ProjectSyndra;Trusted_Connection=True;MultipleActiveResultSets=true",
    "RiotApi": "RGAPI-00000000-0000-0000-0000-000000000000"
  },
  "Jobs": {
    "Hangfire": {
      "GlobalRetryAttempts": 1
    },
    "Schedule": {
      "DetectPatchCron": "0 */6 * * *",
      "RetryFailedMatchesCron": "0 * * * *",
      "RefreshChampionAnalyticsDailyCron": "0 4 * * *",
      "RefreshChampionAnalyticsAdaptiveCron": "*/10 * * * *",
      "ChampionAnalyticsIngestionCron": "*/5 * * * *",
      "LiveGamePollingCron": "*/2 * * * *",
      "EnableAdaptiveAnalyticsRefresh": true,
      "EnableChampionAnalyticsIngestion": true,
      "CleanupOnStartup": false,
      "RunPatchDetectionOnStartup": true
    },
    "LiveGamePolling": {
      "MaxTrackedSummonersPerRun": 20,
      "MaxRiotRequestsPerRun": 15,
      "PollOnlyFavoriteSummoners": true,
      "RespectUserLivePollingPreference": true,
      "PauseWhileChampionAnalyticsUnavailable": true
    },
    "RetryFailedMatches": {
      "MaxMatchesPerRun": 3,
      "MinimumMinutesSinceLastAttempt": 15
    },
    "RefreshChampionAnalytics": {
      "PopularChampionsTakeCount": 75,
      "ChampionsPerRoleToPreWarm": 8,
      "AdaptiveNewMatchesThreshold": 120,
      "AdaptiveLookbackMinutes": 30,
      "MinimumRefreshIntervalMinutes": 45,
      "ForceRefreshAfterHours": 8,
      "EnqueueIngestionWhenNoPopularChampions": true
    },
    "ChampionAnalyticsIngestion": {
      "MinimumSuccessfulMatchesForCurrentPatch": 120,
      "DataStaleAfterMinutes": 45,
      "MaxCandidateSummonersPerRun": 50,
      "MaxRefreshJobsToQueuePerRun": 5,
      "RefreshLockMinutes": 10,
      "PrioritizeFavoriteSummoners": true,
      "FallbackToTrackedSummoners": true
    },
    "SummonerBootstrap": {
      "Enabled": true,
      "PlatformRegion": "NA1",
      "ChallengerSeedCount": 50,
      "LockMinutes": 10
    }
  }
}
