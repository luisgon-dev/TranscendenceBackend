{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "ConnectionStrings": {
    "MainDatabase": "Server=;Port=;Database=;Password=;Username=",
    "RiotApi": "RGAPI-00000000-0000-0000-0000-000000000000",
    "Redis": "localhost:6379"
  },
  "Analytics": {
    "Compute": {
      "MinimumGamesRequired": 100,
      "EarlyPatchMinimumGamesRequired": 40,
      "EarlyPatchWindowHours": 72
    }
  },
  "Jobs": {
    "Hangfire": {
      "GlobalRetryAttempts": 1
    },
    "Schedule": {
      "DetectPatchCron": "0 */6 * * *",
      "RetryFailedMatchesCron": "0 * * * *",
      "RefreshChampionAnalyticsDailyCron": "0 4 * * *",
      "RefreshChampionAnalyticsAdaptiveCron": "*/15 * * * *",
      "ChampionAnalyticsIngestionCron": "*/10 * * * *",
      "LiveGamePollingCron": "*/2 * * * *",
      "EnableAdaptiveAnalyticsRefresh": true,
      "EnableChampionAnalyticsIngestion": true,
      "CleanupOnStartup": false,
      "RunPatchDetectionOnStartup": false
    },
    "LiveGamePolling": {
      "MaxTrackedSummonersPerRun": 30,
      "MaxRiotRequestsPerRun": 20,
      "PollOnlyFavoriteSummoners": true,
      "RespectUserLivePollingPreference": true,
      "PauseWhileChampionAnalyticsUnavailable": true
    },
    "RetryFailedMatches": {
      "MaxMatchesPerRun": 5,
      "MinimumMinutesSinceLastAttempt": 15
    },
    "RefreshChampionAnalytics": {
      "PopularChampionsTakeCount": 100,
      "ChampionsPerRoleToPreWarm": 12,
      "AdaptiveNewMatchesThreshold": 250,
      "AdaptiveLookbackMinutes": 30,
      "MinimumRefreshIntervalMinutes": 60,
      "ForceRefreshAfterHours": 12,
      "EnqueueIngestionWhenNoPopularChampions": true
    },
    "ChampionAnalyticsIngestion": {
      "MinimumSuccessfulMatchesForCurrentPatch": 200,
      "TargetSuccessfulMatchesForCurrentPatch": 400,
      "DataStaleAfterMinutes": 90,
      "MaxCandidateSummonersPerRun": 75,
      "MinRefreshJobsToQueuePerRun": 1,
      "MaxRefreshJobsToQueuePerRun": 6,
      "RefreshLockMinutes": 10,
      "PrioritizeFavoriteSummoners": true,
      "FallbackToTrackedSummoners": true,
      "PauseWhenApiPriorityRefreshActive": true
    },
    "SummonerBootstrap": {
      "Enabled": true,
      "PlatformRegion": "NA1",
      "ChallengerSeedCount": 50,
      "LockMinutes": 10
    }
  }
}
